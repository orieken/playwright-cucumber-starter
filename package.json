{
  "name": "playwright-cucumber-starter",
  "version": "0.0.2",
  "description": "template project for playwright with cucumber",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint . --fix",
    "prepare": "husky install",
    "cucumber": "node_modules/.bin/cucumber-js ",
    "cu": "npm run cucumber",
    "prettier": "prettier 'features/**/*.ts'",
    "prettier:fix": "prettier --write 'features/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orieken/playwright-cucumber-starter.git"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "typescript"
  ],
  "author": "Oscar Rieken <oriekenjr@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/orieken/playwright-cucumber-starter/issues"
  },
  "homepage": "https://github.com/orieken/playwright-cucumber-starter#readme",
  "devDependencies": {
    "@cucumber/cucumber": "10.3.1",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "playwright": "^1.41.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslint-etc": "^1.13.10",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write ."
    ],
    "*.js": "eslint --cache --fix"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "allowTemplateLiterals": true
  }
}
