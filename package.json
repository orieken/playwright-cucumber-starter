{
  "name": "playwright-cucumber-starter",
  "version": "0.0.1",
  "description": "template project for playwright with cucumber",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint . --fix",
    "prepare": "husky install",
    "cucumber": "node_modules/.bin/cucumber-js ",
    "cu": "npm run cucumber",
    "prettier": "prettier 'features/**/*.ts'",
    "prettier:fix": "prettier --write 'features/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orieken/playwright-cucumber-starter.git"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "typescript"
  ],
  "author": "Oscar Rieken <oriekenjr@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/orieken/playwright-cucumber-starter/issues"
  },
  "homepage": "https://github.com/orieken/playwright-cucumber-starter#readme",
  "devDependencies": {
    "@cucumber/cucumber": "7.2.1",
    "@cucumber/pretty-formatter": "^1.0.0-alpha.0",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "playwright": "1.11.1",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "tslint-etc": "^1.13.10",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write ."
    ],
    "*.js": "eslint --cache --fix"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  }
}
